@page "/ChampionshipDetails/{ChampionshipGuid:guid}"

@using SimRacingManager.Core
@using SimRacingManager.Data
@using SimRacingManager.Components.PageComponents

<h3>@_newChampionship.Name</h3>
<p>There are @_newChampionship.Drivers.Count drivers competing in this Championship.</p>

<div class="row row-cols-1 row-cols-md-2 g-4">
    @foreach (var tracks in _newChampionship.Tracks)
    {
        <div class="col">
            <TrackCard track="tracks"/>
        </div>
    }
</div>

@code {
    [Parameter]
    public Guid ChampionshipGuid { get; set; }

    private Championship _newChampionship = new(string.Empty, [new Driver(string.Empty)], [new Track(string.Empty)]);
    
    // TODO: Fix this mess.
    protected override void OnInitialized()
    {
        if (Championships.Y2025Q1.GrabInstanceFromGuid(ChampionshipGuid) != null)
        {
            _newChampionship = Championships.Y2025Q1.GrabInstanceFromGuid(ChampionshipGuid);
        }
        else
        {
            _newChampionship = Championships.Y2025Q2.GrabInstanceFromGuid(ChampionshipGuid);   
        }
    }
}