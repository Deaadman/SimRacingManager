@page "/ChampionshipDetails/{championshipGUID:guid}"
@using SimRacingManager.Core
@using SimRacingManager.Components.PageComponents

<h3>@newChampionship.Name</h3>
<p>There are @newChampionship.Drivers.Count drivers competing in this Championship.</p>

<div class="row row-cols-1 row-cols-md-2 g-4">
    @foreach (var tracks in newChampionship.Tracks)
    {
        <div class="col">
            <TrackCard track="tracks"/>
        </div>
    }
</div>

@code {
    [Parameter]
    public Guid championshipGUID { get; set; }

    public Championship newChampionship = new(string.Empty, new List<Driver>([new Driver(string.Empty)]), new List<Track>([new Track(String.Empty, String.Empty)]));
    
    protected override void OnInitialized()
    {
        if (Home.championship1.GrabInstanceFromGUID(championshipGUID) != null)
        {
            newChampionship = Home.championship1.GrabInstanceFromGUID(championshipGUID);
        }
        else
        {
            newChampionship = Home.championship2.GrabInstanceFromGUID(championshipGUID);   
        }
    }
}