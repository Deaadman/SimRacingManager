@page "/"

@using SimRacingManager.Core
@using SimRacingManager.Data

@* TODO: Use MudBlazor and MudBlazor.ThemeManager in NuGet instead of Bootstrap / Standard HTML *@
@* TODO: Reverse the order of the championships, from newest to oldest. So Q4 to Q1 *@
@* TODO: Add each year in dynamically as well *@
<div class="card">
    <div class="card-header text-center">
        2025
    </div>
    <ul class="list-group list-group-flush">
        @foreach (var championship in Championships.ChampionshipsList)
        {
            @for (var championshipYear = championship.Year; championshipYear == 2025; championshipYear++) /* Looping through championships to check the years */
            {
                <NavLink href="@($"ChampionshipDetails/{championship.GUID}")">
                    <li class="list-group-item">@championship.Name</li>
                </NavLink> 
            }
        }
    </ul>
</div>